    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <StartupObject>AnimatedWallpaper.WallpaperEngine_</StartupObject>
    <Configurations>Debug;Release;ReleaseGitHub</Configurations>
